<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IATLC Egypt</title>
    <link rel="icon" href="~/assets/img/logo.jpg">
    @Scripts.Render("~/bundles/modernizr")


    
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("IATLC ", "MainAdmin", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            @Resources.Main.MainDashBoard
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Course/ShowCourses">@Resources.Main.Courses</a></li>
                            <li><a href="/Instractor">@Resources.Main.Instructors</a></li>
                            <li><a href="/Customers">@Resources.Main.Customers</a></li>
                            <li><a href="/Specifications">@Resources.Main.Specifications</a></li>
                            <li><a href="/Corporates">@Resources.Main.corporates</a></li>
                            <li><a href="/">@Resources.Main.Scheduals</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            @Resources.Main.SiteDashBoard
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/CompanyProfiles">@Resources.Main.CompanyProfile</a></li>
                            <li><a href="/faq">@Resources.FAQ.FAQs</a></li>
                            <li><a href="/Gallery">@Resources.Main.Images</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            @Resources.Main.Groups
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/">@Resources.Main.CreateGroup</a></li>
                            <li><a href="/">@Resources.Main.AvailableGroup</a></li>
                            <li><a href="/">@Resources.Main.GroupSearch</a></li>
                        </ul>
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>



    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
                <p>&copy; @DateTime.Now.Year - IATLC</p>
            </footer>
        

    </div>
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>