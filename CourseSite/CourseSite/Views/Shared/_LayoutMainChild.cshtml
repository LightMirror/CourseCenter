                <a href="~/Home/Index" class="scrollto"><img src="~/assets/img/logo.jpg" style="height:64px;" alt="" title=""></a>
            </div>

            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    <li class="menu-active"><a href="~/Home/Index">@Resources.Main.Home</a></li>
                    <li><a href="@Url.Action("Index","Home")#about">@Resources.Main.About</a></li>
                    <li><a href="@Url.Action("Index","Home")#hotels">@Resources.Main.Courses</a></li>
