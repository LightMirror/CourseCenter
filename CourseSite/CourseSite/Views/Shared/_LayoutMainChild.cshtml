                    <li><a href="@Url.Action("Index","Home")#faq">@Resources.Main.FAQ</a></li>
                    <li><a href="@Url.Action("Index","Home")#gallery">@Resources.Main.Gallery</a></li>
                    <li><a href="@Url.Action("Index","Home")#contact">@Resources.Main.ContactUS</a></li>
