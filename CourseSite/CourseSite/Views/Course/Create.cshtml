<script type="text/javascript">
    function previewFileFDP(input) {
        console.log(input);
        var preview = document.getElementById('img');
        t = input.target.files;
        console.log(t);
        var file = t.files[0];
        if (file.type.match('image/png') || file.type.match('image/jpeg') ||
            file.type.match('image/jpg') || file.type.match('image/bmp') || file.type.match('image/gif')) {
            var reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            }

            //else {
            //    preview.src = document.querySelector('#<%=hfFDPImagePath.ClientID %>').value;
            //}
        } 
    }

</script>

