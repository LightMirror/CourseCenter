@model IEnumerable<CourseSite.Models.DAL.Courses>

@{
    ViewBag.Title = "ShowCourses";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ShowCourses</h2>

<div class="container">

    <p>
        <span class="glyphicon glyphicon-plus"></span>
        @Html.ActionLink("Create New", "Create") &nbsp;
        <span class="glyphicon glyphicon-refresh"></span>
        @Html.ActionLink("Refresh Offloading", "ShowCourses") &nbsp;
    </p>

    <div class="table table-responsive">

        <table class="table">
            <tr>
                <th class="text-center" style="background-color: #CED8F6;">
                    @Html.DisplayNameFor(model => model.Course_EngName)
                </th>
                <th class="text-center" style="background-color: #CED8F6;">
                    @Html.DisplayNameFor(model => model.Course_TotalHour)
                </th>
                <th class="text-center" style="background-color: #CED8F6;">
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Course_EngName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Course_TotalHour)
                </td>
                <td class="text-center">
                    <a href="/Course/Edit/@item.ID" class="glyphicon glyphicon-edit btn btn-primary "></a>
                    <a href="/Course/Delete/@item.ID" class="glyphicon glyphicon-trash btn btn-danger" onclick="return confirm('Are you sure you delete this Course?');"></a>
                </td>
            </tr>
            }

        </table>

    </div>
</div>
