@model IEnumerable<CourseSite.Models.DAL.Customers>

@{
    ViewBag.Title = Resources.Main.List;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@Resources.Main.List @Resources.Cutomers.CutomersTitle </h2>

<p>
    @Html.ActionLink(@Resources.Main.CreateNew, "Create")
</p>
<div class="table table-responsive">
    <table class="table table-hover table-striped table-bordered table-margin-bottom-clear ">
        <tr>
            <th class="text-center" style="background-color: #CED8F6;">
                @Html.DisplayNameFor(model => model.Customer_EngName)
            </th>
            <th class="text-center" style="background-color: #CED8F6;">
                @Html.DisplayNameFor(model => model.Customer_AraName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td  class="text-center">
                    @Html.DisplayFor(modelItem => item.Customer_EngName)
                </td >
                <td  class="text-center">
                    @Html.DisplayFor(modelItem => item.Customer_AraName)
                </td>
                <td  class="text-center">
                    @Html.ActionLink(Resources.Main.Edit + " ", "Edit", new { id=item.ID }, new { @class = "glyphicon glyphicon-edit btn btn-primary" })
                </td>
            </tr>
}

    </table>
</div>
