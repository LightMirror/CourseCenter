@model IEnumerable<CourseSite.Models.DAL.Instractors>

@{
    ViewBag.Title = Resources.Instractors.InstractorsTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
    @Html.ActionLink(Resources.Main.CreateNew, "Create")
</p>
<div class="container">
    <table class="table table-hover table-striped table-bordered table-margin-bottom-clear ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Instractor_EngName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instractor_AraName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instractor_Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instractor_Email)
            </th>
            <th>
                @Resources.Instractors.Instractor_Gender
            </th>
            <th>
                @Resources.Instractors.Instractor_Status
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Instractor_EngName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instractor_AraName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instractor_Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instractor_Email)
                </td>
                <td>
                    @if (CourseSite.Common.UImanger.CurrentLang == "en")
                {
                        @Html.DisplayFor(modelItem => item.Gender.Gender_EngName)
                }
                else
                {
                        @Html.DisplayFor(modelItem => item.Gender.Gender_AraName)
                }
                </td>
                <td>
                    @if (CourseSite.Common.UImanger.CurrentLang == "en")
                {
                        @Html.DisplayFor(modelItem => item.InstractorStatus.Status_EngName)
                }
                else
                {
                        @Html.DisplayFor(modelItem => item.InstractorStatus.Status_AraName)
                }
                </td>
                <td>
                    @Html.ActionLink(Resources.Main.Edit, "Edit", new { id = item.ID }) )
                </td>
            </tr>
    }

    </table>
</div>